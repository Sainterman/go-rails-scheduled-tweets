<div class="d-flex align-items-center justify-content-center">
  <h2>Sign up</h2>
</div>
<div class="d-flex align-items-center justify-content-center">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-inputs">
    <div class="form-floating mb-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      <%= f.label :email, class: "form-label" %><br />
    </div>
    <div class="form-floating mb-3">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control" %>
      <%= f.label :name, class: "form-label" %><br />
    </div>
    <div class="form-floating mb-3">
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class:"form-control" %>
      <%= f.label :username, class: "form-label" %><br />
    </div>
    <div class="form-floating mb-3">
      <%= f.text_field :description, autofocus: true, autocomplete: "username", class:"form-control" %>
      <%= f.label :description, class: "form-label" %><br />
    </div>

    <div class="form-floating mb-3">
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
      <%= f.label :password, class: "form-label" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
    </div>

    <div class="form-floating mb-3">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
      <%= f.label :password_confirmation, class:"form-label" %><br />
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Sign up", class:"btn btn-dark" %>
  </div>
<% end %>
</div>
<div class="d-flex align-items-center justify-content-center">
  <%= render "devise/shared/links" %>
</div>
