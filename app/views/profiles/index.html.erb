<div class="d-flex align-items-center justify-content-center">
    <h1>List of profiles</h1>
</div>
<table class="table">
<thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">e-mail</th>
        <th scope="col">Twtitter</th>
        <th scope="col">Linkedin</th>
    </tr>
    <% @profiles.each do |profile| %>
        <tr>
            <th scope="row"><%= profile.id %></th>
            <td><%= profile.name %></td>
            <td><%= profile.email %></td>
            <td><%= profile.twitter %></td>
            <td><%= profile.linkedin %></td>
            <td><%= link_to 'Edit', edit_profile_path(profile), class: "nav-link" %><td>
            <td><%= link_to 'Destroy', profile, method: :delete, data: {confirm: "are you sure?"}, class: "nav-link" %><td>
        </tr>
    <% end %>
</thead>
</table>
        