<div class="d-flex align-items-center justify-content-center">
  <div>
    <h1><%= @profile.name %>'s profile</h1>
  </div>
</div>

<div class="d-flex align-items-center justify-content-center">
<div class="card" style="width: 18rem;">
<% if @profile.avatar.attached? %>
    <%= image_tag @profile.avatar.variant(resize: "400x400"), class: "card-img-top" %>
<% end %>
    <div class="card-header">
      <%= @profile.name %>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><%= @profile.email %></li>
      <% @profile.socials.each do |social| %>
        <li class="list-group-item">
          <%= social.name %>: <%= social.link %>
        </li>
      <% end %>
<li class="list-group-item"><%= link_to 'Edit', edit_profile_path(@profile) %></li>
    </ul>
</div>
</div>
